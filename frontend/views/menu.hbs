<div class="container">
    <div class="row row-cols-3">
        {{#each menu}}
        <div class="row">
            <h2 class="foodname" style="width: auto; float: left;">
                <a href="/menu/{{this.id}}">
                    &nbsp;{{this.name}}
                </a>
            </h2>
            <h2 style="width: auto; margin-left: auto; float: right;">${{this.price}}</h2>
            <p style="clear: both;color:rgb(63, 63, 63)">&nbsp;{{this.description}}</p>
            <img src="{{this.photo}}" width="280" height="280">
        </div>
        {{/each}}
    </div>
</div>

{{! creating a function to get the order Details by its id}}
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script type="text/javascript">
    async function get_Order(orderId) {
        let data = null;
        data = await axios
            .get(`http://localhost:4000/orders/${orderId}`)
            .then((data) => {

                if (data.data) {
                    return data.data;
                }

            })
            .catch((err) => {
                console.log(err);
            });
    }
</script>