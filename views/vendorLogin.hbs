<section id="loginform">
  <h1>Login</h1>
  <div class="loginform-login">
    <form class="form" method="post" action="/vendors/login">
      <label>
        Email
        <input placeholder="email" name="username" />
      </label>
      <label class="mt20">
        Password
        <input placeholder="password" type="password" name="password" />
      </label>
      <input type="submit" value="submit">
    </form>
  </div>
  {{#if error}}
  <div class="login_fail">
    <a style="color:red;"> invalid username or password </a>
  </div>
  {{/if}}
  <p>For Testing Purpose:</p>
  <p>vendor@test.com : 987654</p>
  <p>vendor2@test.com : 123456</p>
  <p>vendor3@test.com : 234567</p>

</section>