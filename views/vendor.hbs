<section id="singleVendor" class="col container">
    <div id="vendorTitle" class="flex alignMiddle">
        <button class="darkButton" onclick="location.href='/vendors'" type="button">Back to Vendors</button>
        <h1>{{vendor.name}}, {{vendor.textlocation}}</h1>
    </div>
    <div class="flexBetween vendorDisplay">
        <div id="menu">
            {{#vendorMenu vendor.menu.menuitem}}{{/vendorMenu}}
        </div>
        <div id="order" class="col">
            <div class="col">
                <h2>Your order</h2>
                <div class="van col">
                    <div class="flexBetween">
                        <h4>VAN</h4>
                        <h5>change</h5>
                    </div>
                    <div class="name flex">
                        <div class="title">
                            <p>{{vendor.name}}</p>
                        </div>
                        <div class="location flex">
                            <i class="fas fa-map-marker-alt"></i>
                            <p>{{vendor.textlocation}}</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="items colStart">
                {{! Display the items in the cart if there are items, else display no items in cart}}
                {{# if items}}
                    {{# each items}} 
                        <span class='badge'> {{this.items.quantity}} </span>
                        <strong>{{ this.items.item }} </strong>
                    {{/each}}
                {{else}}
                    <p>No Item is Added Yet</p>
                {{/if}}
            </div>
            <div class="col">
                <div class="total flexBetween">
                    <h4>Total</h4>
                    {{! Display the total price of the cart}}
                    <strong> {{totalPrice}} </strong> 
                </div>
                <div class="flexMiddle">
                    <button class="submitButton" onclick="location.href='/orders'" type="submit">Place Order</button>
                </div>
            </div>
        </div>
    </div>
</section>